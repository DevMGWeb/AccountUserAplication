@model CursoWebsite.ViewModels.PasswordViewModels
@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Change Password";
}

<h2>@ViewData["Title"].ToString()</h2>
<br />
<form class="container" asp-action="ChangePassword" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>
    <fieldset>
        <div class="form-group">
            <label class="col-md-12 control-label" for="Name">Password Actual</label>
            <input type="text" class="form-control" asp-for="PasswordActual" />
        </div>
        <div class="form-group">
            <label class="col-md-12 control-label" for="Correo">Nuevo Password</label>
            <input type="text" class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">
            <label class="col-md-12 control-label" for="Correo">Confirmar Nuevo Password</label>
            <input type="text" class="form-control" asp-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-lg" type="submit">Cambiar Contraseña</button>
            <a class="btn btn-danger btn-lg" asp-controller="Main" asp-action="Index">Cancelar</a>
        </div>
    </fieldset>
</form>