@model CursoWebsite.ViewModels.LoginAccount

@{
    ViewData["Title"] = "Acceso Login";
}

<link href="~/css/login.css" rel="stylesheet" />
<div class="sidenav">
    <div class="login-main-text">
        <h2>Application<br> Login Page</h2>
        <p>Login or register from here to access.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form asp-action="Login" asp-antiforgery="true">
                <div class="form-group">
                    <label asp-for="Username" class="control-label">User Name</label>
                    <input type="text" asp-for="Username" class="form-control" placeholder="User Name">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit" class="btn btn-black">Login</button>
                <a class="btn btn-secondary" asp-action="Register">Register</a>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Go back</a>
            </form>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />