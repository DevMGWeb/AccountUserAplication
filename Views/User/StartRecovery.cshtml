@model CursoWebsite.ViewModels.RecoveryAccountViewModel

<form asp-action="StartRecovery" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label" asp-for="Email">Email Account</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Put your email here...">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark">Recovery my account</button>
    <a class="btn btn-danger" asp-controller="User" asp-action="Login">Go to login</a>
</form>
<br />
<br />
@Html.Partial("_SuccessMessageView")

